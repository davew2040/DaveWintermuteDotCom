@model TheDaveSite.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<style>
    .rememberMeCheckbox label {
        margin-top: 15px;
        display: inline;
    }

    .rememberMeCheckbox input[type=checkbox] {
        display:inline;
        margin-left: 30px;
        margin-top: 15px;
    }
</style>

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="bubbleBlock">
        <div class="bubbleBlockHeader">Log In</div>
        <div class="bubbleBlockContent">
            <div class="simpleForm">
                <fieldset>
                    <legend></legend>
                    <ol>
                        <li>
                            @Html.LabelFor(m => m.UserName)
                            @Html.TextBoxFor(m => m.UserName)
                            @Html.ValidationMessageFor(m => m.UserName)
                        </li>
                        <li>
                            @Html.LabelFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password)
                            @Html.ValidationMessageFor(m => m.Password)
                        </li>
                        <li class="rememberMeCheckbox">
                            @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                            @Html.CheckBoxFor(m => m.RememberMe)
                        </li>
                    </ol>
                    <input type="submit" value="Log in" />
                </fieldset>
                </div>
            </div>
    <p style="margin-left: 40px;">
        Please @Html.ActionLink("Register", "Register") if you don't have an account.<br />
        <br />
        Forgot your password? @Html.ActionLink("Click here!", "RequestPasswordReset", "Account")
    </p>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
